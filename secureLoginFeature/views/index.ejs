    <div class="header">
        <div class="emoji">🔐</div>
        <h1>Secure Login System</h1>
        <p>Advanced authentication with session management and security protocols</p>
    </div>

    <!-- This will be populated by JavaScript based on login status -->
    <div id="auth-content">
        <div class="welcome-section">
            <h2>🚀 Ephemeral Authentication Demo</h2>
            <p>This system demonstrates temporary session-based authentication:</p>
            
            <div class="feature-list">
                <div class="feature-item">
                    <strong>� Fresh Sessions Only</strong><br>
                    Every interaction requires new registration - no persistent accounts
                </div>
                <div class="feature-item">
                    <strong>🎫 Temporary Sessions</strong><br>
                    Session data exists only while logged in
                </div>
                <div class="feature-item">
                    <strong>�️ Complete Data Disposal</strong><br>
                    All user data is discarded upon logout
                </div>
                <div class="feature-item">
                    <strong>� Zero Persistence</strong><br>
                    No databases, no permanent storage, completely ephemeral
                </div>
            </div>
        </div>

        <div class="auth-actions">
            <a href="/login/register" class="btn">Create Temporary Account</a>
            <div style="margin-top: 15px; padding: 15px; background: rgba(255, 193, 7, 0.1); border: 1px solid #ffc107; border-radius: 6px; font-size: 14px;">
                <strong>ℹ️ Note:</strong> Registration creates an immediate temporary session. No persistent login available.
            </div>
        </div>
    </div>

    <div class="welcome-section">
        <h3>🔧 Technical Implementation</h3>
        <p>Built with Node.js, Express.js, and EJS templating. Features secure authentication flows, password encryption, and session management for a complete user authentication experience.</p>
    </div>

    <script>
        async function checkLoginStatus() {
            const sessionId = localStorage.getItem('sessionId');
            if (!sessionId) return;
            
            try {
                const response = await fetch(`/login/status?sessionId=${sessionId}`);
                const data = await response.json();
                
                if (data.loggedIn) {
                    showLoggedInContent(data.user);
                }
            } catch (error) {
                console.error('Error checking login status:', error);
            }
        }
        
        function showLoggedInContent(user) {
            const authContent = document.getElementById('auth-content');
            authContent.innerHTML = `
                <div class="user-info">
                    <h2>✅ Welcome back, ${user.username}!</h2>
                    <p>You are successfully logged in to the secure system.</p>
                    <p><strong>Session Status:</strong> Active & Authenticated</p>
                    <p><strong>Email:</strong> ${user.email}</p>
                    <button onclick="logout()" class="btn btn-secondary">Logout</button>
                </div>
            `;
        }
        
        async function logout() {
            try {
                const sessionId = localStorage.getItem('sessionId');
                const response = await fetch('/login/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Session-Id': sessionId
                    }
                });
                
                if (response.ok) {
                    localStorage.removeItem('sessionId');
                    window.location.reload();
                } else {
                    alert('Logout failed');
                }
            } catch (error) {
                console.error('Logout error:', error);
                alert('Logout failed');
            }
        }
        
        // Check login status when page loads
        document.addEventListener('DOMContentLoaded', checkLoginStatus);

        // Back to top airplane visibility
        window.addEventListener('scroll', function() {
            const backToTop = document.getElementById('backToTop');
            if (window.pageYOffset > 300) {
                backToTop.style.opacity = '1';
                backToTop.style.visibility = 'visible';
            } else {
                backToTop.style.opacity = '0';
                backToTop.style.visibility = 'hidden';
            }
        });
    </script>
    
    <!-- ===== BACK TO TOP AIRPLANE ===== -->
